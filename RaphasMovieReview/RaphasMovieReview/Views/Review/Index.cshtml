@model IEnumerable<RaphasMovieReview.Models.Review>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="grid-container">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="gallery" style="display: block;">
                <a target="_blank" href="/Review/Edit/@item.ID">
                    <img src="@item.CoverURL" alt="@item.MovieName">
                </a>
                <div class="rating">
                    @for (int i = 0; i < item.Rating; i++)
                    {
                        <text>★</text>
                    }
                </div>
            </div>
        }
    }
    </div>
